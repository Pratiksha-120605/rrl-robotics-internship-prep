<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mobile_robot">

    <!-- Define constants -->
    <xacro:property name="pi" value="3.14159265359"/>

    <!-- Materials -->
    <material name="blue"><color rgba="0.1 0.1 0.8 1"/></material>
    <material name="black"><color rgba="0 0 0 1"/></material>
    <material name="red"><color rgba="1 0 0 1"/></material>

    <!-- Base Link -->
    <link name="base_link"/>

    <!-- Chassis -->
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <geometry><box size="0.4 0.3 0.15"/></geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.15"/>
            <geometry><box size="0.4 0.3 0.15"/></geometry>
        </collision>
    </link>

    <joint name="base_to_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.15"/>
    </joint>

    <!-- Left Wheel -->
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry><cylinder radius="0.06" length="0.03"/></geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry><cylinder radius="0.06" length="0.03"/></geometry>
        </collision>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.18 0.06" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Right Wheel -->
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry><cylinder radius="0.06" length="0.03"/></geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry><cylinder radius="0.06" length="0.03"/></geometry>
        </collision>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.18 0.06" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Caster Wheel -->
    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry><sphere radius="0.05"/></geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry><sphere radius="0.05"/></geometry>
        </collision>
    </link>

    <joint name="caster_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="-0.15 0 0.05"/>
    </joint>

</robot>
